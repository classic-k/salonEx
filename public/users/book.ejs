<html>
  <head>
    <title>Booking</title>
    <link
      href="https://atlas.microsoft.com/sdk/javascript/mapcontrol/2/atlas.min.css"
      rel="stylesheet"
    />
    <script src="https://atlas.microsoft.com/sdk/javascript/mapcontrol/2/atlas.min.js"></script>

    <!-- Add a reference to the Azure Maps Services Module JavaScript file. -->
    <script src="https://atlas.microsoft.com/sdk/javascript/service/2/atlas-service.min.js"></script>
    <link href="/css/book.css" rel="stylesheet" />
  </head>
  <body onload="createMap()">
    <div className="container">
      <div className="title_container">
        <h2>Responsive Booking Form</h2>
      </div>

      <div className="row clearfix">
        <h3>Filters</h3>
        <div className="input_field radio_option">
          <button class="btn" onclick="geoLocation()">Allow Location</button>
          <input type="radio" name="sex" id="rd1" value="male" />
          <span>Male</span>
          <input type="radio" name="sex" id="rd2" value="female" />
          <span>Female</span>
          <input type="radio" name="sex" id="rd2" value="female" />
          <span>Unisex</span>
        </div>
        <div>
          <div id="bm"></div>

          <div id="search">
            <div class="search-input-box">
              <div class="search-input-group">
                <div class="search-icon" type="button"></div>
                <input id="search-input" type="text" placeholder="Search" />
              </div>
            </div>
            <ul id="results-panel"></ul>
          </div>
        </div>
      </div>

      <form method="post" action="/user/book">
        <div className="row clearfix">
          <div className="col_half">
            <div className="input_field">
              <span><i aria-hidden="true" className="fa fa-user"></i></span>
              <select name="salon">
                <option value="">Select Salon Name</option>
              </select>
            </div>
          </div>
        </div>

        <input className="button" type="submit" value="Register" />
      </form>
    </div>
    <script src="/js/book.js"></script>
  </body>
</html>
